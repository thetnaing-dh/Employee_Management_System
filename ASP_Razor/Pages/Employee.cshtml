@page
@using ASP_Razor.Models
@model ASP_Razor.Pages.EmployeeModel
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<!-- Add/Edit Form -->
<form method="post">
    @if (Model.IsEditing)
    {
        <input type="hidden" name="id" value="@Model.NewEmployee.Id" />
    }
    else
    {
        <input type="hidden" name="id" value="0" />
    }

    <div class="d-flex align-items-center gap-3">
        <div class="d-flex align-items-center">
            <label for="Name" class="me-2 mb-0">Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.NewEmployee.Name" />
        </div>

        <div class="d-flex align-items-center">
            <label for="Age" class="me-2 mb-0">Age:</label>
            <input type="number" class="form-control" id="Age" name="Age" value="@Model.NewEmployee.Age" />
        </div>

    @if (Model.IsEditing)
    {
        <button type="submit" class="btn btn-warning" asp-page-handler="Update">Update</button>
        <button type="submit" class="btn btn-secondary" asp-page-handler="Cancel">Cancel</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary" asp-page-handler="Add">Add</button>
    }
    </div>
</form>

<hr />

<!-- Employees Table -->
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee employee in Model.Employees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>
                    <form method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-sm btn-info" asp-page-handler="Edit">Edit</button>
                    </form>
                    <form method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" asp-page-handler="Delete"
                                onclick="return confirm('Are you sure you want to delete this employee?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>